<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shishuo.cms.dao.DocumentDao">

	<resultMap id="baseMap" type="com.shishuo.cms.entity.Document">
		<id column="id" property="id" />
		<result column="name" property="name"/>
		<result column="type" property="type"/>
		<result column="path" property="path"/>
		<result column="preview" property="preview"/>
		<result column="created" property="created"/>
	</resultMap>


	<insert id="add" parameterType="com.shishuo.cms.entity.Document" useGeneratedKeys="true" keyProperty="id">
		insert into
		document(id,name,type,path,preview,created)
		values(#{id},#{name},#{type},#{path},#{preview},#{created})
	</insert>

	<select id="getDocList" resultMap="baseMap">
		select * from document
	</select>

	<select id="getById" resultType="com.shishuo.cms.entity.Document">
		SELECT * from document WHERE id = #{id}
	</select>

	<update id="modifyPreviewById">
		update document set preview = #{1} where id = #{0}
	</update>

	<delete id="delete" parameterType="long">
		DELETE from document where id = #{id}
	</delete>

</mapper>  
